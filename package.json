{
  "name": "deejapp",
  "version": "0.1.0",
  "main": "gui/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.hilmiguner.deejapp",
    "productName": "DeejApp",
    "files": [
      "gui/**/*",
      "backend/dist/**/*",
      "backend/version.json"
    ],
    "extraResources": [
      {
        "from": "backend/dist/deej-backend.exe",
        "to": "deej-backend.exe"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "gui/icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.0"
  }
}
